<h1>Good Food Hunting</h1>

<% @dishes.each do |dish| %>
  <p><%= dish.name %></p>
  <p><img src="<%= dish.image_url %>"></p>
  <a href="/dishes/<%= dish.id %>/edit">Edit</a>
  <form action="/dishes/<%= dish.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button>Delete</button>
  </form>

<% end %>

<p><a href="/dishes/new">New Dish</a></p>